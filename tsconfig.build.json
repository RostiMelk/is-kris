{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022"
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*",
    "examples/**/*",
    "**/*.test.ts"
  ]
}
